doctype 5
html
    head
        meta(charset="utf-8")
        title trafie api
        style
            table, tr, td, th {
                border: 4px solid #0070A6;
                border-collapse: collapse;
                color: #0070A6;
                font-family: arial;
            }
            td {
                padding: 8px;
            }
            th {
                font-size: 1.2em;
            }
            .route-cell {
                white-space: nowrap;
            }
    body
        table
            tr
                th Route
                th Method
                th Description
                th Parameters
                th Example Response (Success)
                th Example Response (Fail)
            each endpoint in api
                each method, methodIndex in endpoint.methods
                    tr
                        if (methodIndex === 0) 
                            td.route-cell(rowspan=endpoint.methods.length)= endpoint.route
                        td= method.name
                        td= method.description
                        td= method.parameters
                        td= method.exampleResponseSuccess
                        td= method.exampleResponseFail
