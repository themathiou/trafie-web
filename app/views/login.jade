extends welcome_layout

block content

	div#welcome_container
		div#header
			div#welcome_logo trafie

		form.welcome_form.col-xs-12.col-sm-6.col-md-6.col-lg-6(method="post" action="/login" role="form")
			if errors.email
				div.error_message= errors.email
			div.form-group
				label(for="email_input") Email:
					span#email_error.warning_message
				input#email_input.form-control(name="email" type="email" value="user@trafie.com" autofocus)
			div.form-group
				label(for="password_input") Password:
				input#password_input.form-control(name="password" type="password" value="123123")
			div
				input.btn.btn-success.btn-lg.btn-block(type="submit", value="Login")
			//---not registration yet--
			//- div
				h3 
				small Not a member?
				a(href="/register") &nbsp; Register
			//- div
				h3 
				small Forgot Password?
				a(href="/reset_password_request") &nbsp; Reset Here
	//scripts
	script(type='text/javascript', src='/javascripts/login.js')
	script.
		loginHandlers();