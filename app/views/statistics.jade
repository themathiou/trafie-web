div( ng-init="statisticsInit()" )
	br
	br
	h4 {{current_user.first_name}} {{current_user.last_name}}

	ul.filters-row
		li( ng-repeat="discipline in current_user.disciplines_of_user")
			a(ng-click="drawSimpleChart( current_user._id, discipline.discipline )") {{discipline.formatted_discipline}}
	ul.filters-row.col-xs-12.col-md-12.col-lg-12
		li(ng-repeat="year in active_years" style="float:left;")
			a(ng-click="drawSimpleChart(current_user._id,'high_jump', year)") {{year}}
	br
	br
	br

	div.loading( ng-show="loading")

	div#chart


