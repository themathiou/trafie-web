h3= tr['profile_settings']

//PROFILE PIC
div.settings-element-profile-pic
	label= tr['profile_picture'] + ': '
	img.thumb( src="{{user.picture}}" )
	a.editLink( ng-click="showHide('edit_profilepic')" tooltip-placement="top" tooltip="Edit" )
		include ../svg/edit_activity_svg
	div( ng-show="edit_profilepic" )
		div
			input( type="file" ng-file-select="onFileSelect($files)" )
			button( ng-click="upload.abort()" ) Cancel Upload
			div( ng-show="selectedFiles != null")
				div( class="sel-file" ng-repeat="f in selectedFiles")
					{{($index + 1) + '.'}}
					img( ng-show="dataUrls[$index]" ng-src="{{dataUrls[$index]}}" )
					button.btn.green( ng-click="start($index)" ng-show="progress[$index] < 0") Start
					span( class="progress" ng-show="progress[$index] >= 0" )
						div( style="width:{{progress[$index]}}%") {{progress[$index]}}%
					button( class="button" ng-click="abort($index)" ng-show="hasUploader($index) && progress[$index] < 100") Abort
					{{f.name}} - size: {{f.size}}B - type: {{f.type}}
		div.formButtons( ng-show="edit_profilepic" )
			a.cancel_link( ng-click="showHide('edit_profilepic')" )= tr['cancel']


//FIRST NAME
div.settings-element
	form( method="POST" ng-submit="submitChangeSetting('first_name')")
		label= tr['first_name'] + ': '
		span.existed {{ user.first_name }}
		div( ng-show="first_name_msg !=''") {{first_name_msg}}
		div( ng-show="edit_fname" )
			input( ng-model="user.new_first_name" name="first_name" value="{{user.first_name}}" )
		div.formButtons( ng-show="edit_fname" )
			input.btn.green( type="submit" value=tr['submit'])
			a.cancel_link( ng-click="showHide('edit_fname')" )= tr['cancel']
	a.editLink( ng-click="showHide('edit_fname')" tooltip-placement="top" tooltip="Edit" )
			include ../svg/edit_activity_svg

