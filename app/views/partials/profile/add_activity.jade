accordion( class="info add_activity" ng-show="self")
	accordion-group( heading=tr['add_new_activity'] is-open="accordions.addActivity")

		label= tr['choose_your_discipline']
		select(ng-model="newActivityForm.selected_discipline")
			option( value="")= tr['choose_your_discipline']
			- for (i in disciplines)
				option( value=disciplines[i])= tr[disciplines[i]]

		form( ng-if="newActivityForm.selected_discipline" ng-submit="submitNewActivity()" name="submitForm")
			div.data-entry.form-group
				label= tr['enter_your_performance'] +':'
				//- time
				div.performance_fields( ng-if="disciplines.time.indexOf(newActivityForm.selected_discipline) > -1" )
					div
						label(for="hours_input")= tr['hours_short'] + ':'
						input.form-control( size="3" maxlength="2" ng-model="newActivityForm.performance.hours" name="hours" ng-class="{error: submitForm.hours.$error.pattern}" ng-pattern="NUMBERS")
					div
						label(for="minutes_input")= tr['minutes_short'] + ':'
						input.form-control( size="3" maxlength="2" ng-model="newActivityForm.performance.minutes" name="minutes" ng-class="{error: submitForm.minutes.$error.pattern}" ng-pattern="NUMBERS")
					div
						label(for="seconds_input")= tr['seconds_short'] + ':'
						input.form-control( size="3" maxlength="2" ng-model="newActivityForm.performance.seconds" name="seconds" ng-class="{error: submitForm.seconds.$error.pattern}" ng-pattern="NUMBERS")
					div
						label(for="centiseconds_input")= tr['centiseconds_short'] + ':'
						input.form-control( size="3" maxlength="2" ng-model="newActivityForm.performance.centiseconds" name="centiseconds" ng-class="{error: submitForm.centiseconds.$error.pattern}" ng-pattern="NUMBERS")

				//- distance
				div.performance_fields( ng-if="disciplines.distance.indexOf(newActivityForm.selected_discipline) > -1" )
					div
						label(for="distance_1_input")= tr['meters_short'] + ':'
						input.form-control(size="3" maxlength="2" ng-model="newActivityForm.performance.distance_1" name="d_1" ng-class="{error: submitForm.d_1.$error.pattern}" ng-pattern="NUMBERS")
					div
						label(for="distance_2_input")= tr['centimeters_short'] + ':'
						input.form-control(size="3" maxlength="2" ng-model="newActivityForm.performance.distance_2" name="d_2" ng-class="{error: submitForm.d_2.$error.pattern}" ng-pattern="NUMBERS")

				//- points
				div.performance_fields( ng-if="disciplines.points.indexOf(newActivityForm.selected_discipline) > -1" )
					div
						label(for="points_input")= tr['points'] + ':'
						input.form-control(type="text" size="7" maxlength="5" ng-model="newActivityForm.performance.points" name="points" ng-class="{error: submitForm.points.$error.pattern}" ng-pattern="NUMBERS")

				//- common variables
				div
					label(for="datepicker")= tr['date'] + ':'
					datepicker(date-format="EEE MMM dd yyyy")
						input.form-control(ng-model="newActivityForm.date" type="text" placeholder="Choose a date")
				div
					label(for="place")= tr['place']
					input.form-control(type="text" ng-model="newActivityForm.place" placeholder="i.e 4" name="place" ng-class="{error: submitForm.place.$error.pattern}" ng-pattern="NUMBERS")
				div
					label(for="location")= tr['location']
					input.form-control(type="text" ng-model="newActivityForm.location" placeholder="i.e Athens, Greece")
				div
					label(for="competition")= tr['competition']
					input.form-control(type="text" ng-model="newActivityForm.competition" placeholder="i.e World Junior Championship")
				div
					label(for="notes")= tr['notes']
					input.form-control(type="text" ng-model="newActivityForm.notes" placeholder="There be dragons...")
				div
					label(for="private")= tr['private']
					input(type="checkbox" name="private" ng-model="newActivityForm.private" ng-init="newActivityForm.private=false")


			//submit
			div.submit_buttons
				input.btn.btn-success(type="submit" value=tr['save'])
				a.btn.btn-link( ng-click="accordions.addActivity = !accordions.addActivity" )= tr['cancel']
