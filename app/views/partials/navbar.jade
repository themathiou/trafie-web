nav.navbar.navbar-main.navbar-expand-lg.navbar-dark.bg-trafie
    div.container.px-lg-0
        a.navbar-brand.mr-lg-5(href="/") trafie
        button.navbar-toggler.pr-0(type="button" data-toggle="collapse" data-target="#navbar-main-collapse" aria-controls="navbar-main-collapse" aria-expanded="false" aria-label="Toggle navigation")
            span.navbar-toggler-icon
        div#navbar-main-collapse.navbar-collapse.collapse
            ul.navbar-nav.align-items-lg-center
                li.nav-item(ng-if="App.user" ng-class="{'active': App.getCurrentPage() === 'profile'}")
                    a.nav-link(href='/')
                        i.fa.fa-user.nav-icon
                        span(ng-bind="App.user.firstName")
                li.nav-item(ng-if="App.user" class="nav-item" ng-class="{'active': App.getCurrentPage() === 'settings'}")
                    a.nav-link(href='/settings')
                        i.fa.fa-cog.nav-icon
                        span(translate="COMMON.SETTINGS")
                li.nav-item(ng-if="!App.user")
                    a.nav-link(href='/register' ng-click="App.forceRedirect('register')")
                        span(translate="COMMON.REGISTER")
                li.nav-item(ng-if="!App.user")
                    a.nav-link(href='/login' ng-click="App.forceRedirect('login')")
                        span(translate="COMMON.LOGIN")
            ul.navbar-nav.align-items-lg-center.ml-lg-auto
                li.nav-item
                    a.nav-link(href="#" data-action="omnisearch-open" data-target="#omnisearch")
                        i.fas.fa-search

