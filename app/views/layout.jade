doctype html
html(ng-app="trafie")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
        base(href="/")
        link(rel="shortcut icon" type="image/png" href="images/favicon.png")
        title trafie

        link(href="/bower_components/angular-notify/dist/angular-notify.min.css" rel="stylesheet" type="text/css")
        link(href="/bower_components/angular-ui-select/dist/select.min.css" rel="stylesheet" type="text/css")
        link(href="/styles/styles.css" rel="stylesheet" type="text/css")
        script(type="text/javascript").
            trafie = {
                userId: "#{userId}"
            };

    body(ng-controller="AppController as App")
        include ./partials/navbar.jade

        div(ng-view)

        if env === "development"
            include ./partials/scripts.jade
        else
            script(type="text/javascript", src="/app/trafie.min.js")
