extends welcome_layout

block content

	div#welcome_container
		div#header
			div#welcome_logo trafie

		div.forms
			form#register.welcome_form(method="post")
				if errors.first_name
						div.error_message= errors.first_name
				if errors.last_name
						div.error_message= errors.last_name
				if errors.email
						div.error_message= errors.email

				label(for="first_name") First Name
				input#first_name.textfield(type="text" name="first_name" placeholder="" value=fields.first_name)
				label(for="last_name") Last Name
				input#last_name.textfield(type="text" name="last_name" placeholder="" value=fields.last_name)
				label(for="email") Email
				input#email.textfield(type="text" name="email" placeholder="" value=fields.email)

				if errors.password
						div.error_message= errors.password
				if errors.repeat_password
						div.error_message= errors.repeat_password
				label(for="password") Password
				input#password.textfield(type="password" name="password" value="123123")
				label(for="repeat_password") Repeat Password
				input#repeat_password.textfield(type="password" name="repeat_password" value="123123")

				div
					p.information_message all fields are required

				input.button_green(type="submit" name="sign_up" value="Register")
				div
					p.switch_login_register_message Already a member?
						a(href="/login") Login
