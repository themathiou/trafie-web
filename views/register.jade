extends welcome_layout

block content

	div#welcome_container
		div#header
			div#welcome_logo trafie

		div.forms
			form#register.welcome_form(method="post")
				label(for="first_name") First Name
					span#first_name_error.info - must contain only latin characters
					if errors.first_name
						span.error_message= errors.first_name
				input#first_name.textfield(type="text" name="first_name" placeholder="" value=fields.first_name)

				label(for="last_name") Last Name
					span#last_name_error.info - must contain only latin characters
					if errors.last_name
						span.error_message= errors.last_name
				input#last_name.textfield(type="text" name="last_name" placeholder="" value=fields.last_name)

				label(for="email") Email
					span.info - i.e someone@somewhere.xom
				span#email_error.warning_message
				if errors.email
					span.error_message= errors.email
				input#email.textfield(type="text" name="email" placeholder="" value=fields.email)

				if errors.password
						div.error_message= errors.password
				if errors.repeat_password
						div.error_message= errors.repeat_password
				label(for="password") Password
					span#password_error.info - must be at least 6 characters long
				input#password.textfield(type="password" name="password" value="123123")

				label(for="repeat_password") Repeat Password
					span#repeat_password_error.warning_message
				input#repeat_password.textfield(type="password" name="repeat_password" value="123123")

				div
					p.information_message all fields are required

				input#register_button.button_green(type="submit" name="sign_up" value="Register")
				div
					p.switch_login_register_message Already a member?
						a(href="/login") Login
	//scripts
	script(type='text/javascript', src='/javascripts/login.js')
	script.
		registerHandlers();