	link(href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600&subset=latin,greek,cyrillic' rel='stylesheet' type='text/css')
	link(rel='stylesheet', href='/stylesheets/reset.css')
	link(rel='stylesheet', href='/stylesheets/style.css')


	meta(name="apple-mobile-web-app-capable" content="yes")
	title trafie

body
	div#mainmenu_container
		div#mainmenu
			div
			a.logo(href="/")
			input#search( name="search" placeholder="Search here..." autocomplete="off" )
			ul#search_results

			if user._id
				ul.dropdown
					li
						a.menu_profile(href="/" ng-class="active: section == 'profile' " )= {{user.first_name}}
					li
						a.menu_statistics(href="/statistics" ng-class="active: section == 'statistics' ") {{statistics}}
					li
						a.menu_settings(href="/settings" ng-class="active: section == 'settings' ") {{settings}}
			else
				ul.dropdown
					li
						a.menu_profile(href="/register") Register
					li
						a.menu_statistics(href="/login") Login

	#content( ng-view )
	
	script(type="text/javascript", src="/javascripts/libs/angular.min.js")
	script(type="text/javascript", src="/javascripts/libs/angular-route.min.js")
	script(type="text/javascript", src="/javascripts/libs/ui-bootstrap-0.10.0.min.js")
	script(type='text/javascript', src='/javascripts/scripts/script.js')
	script(type='text/javascript', src='/javascripts/app.js')
	script(type='text/javascript', src='/javascripts/controllers/settingsController.js')
//script.
	mainMenuHandlers();



