extends layout
block content
	div#main_content
		//h4.left= title

		div#settingsNav
			ul
				li#profileSettingsTab.active
					a( href="javascript:;" onclick="showSettingsTab('profileSettings')") Profile Settings
				li#accountSettingsTab
					a( href="javascript:;" onclick="showSettingsTab('accountSettings')") Account Settings
				li.logout
					a(href="/logout")= tr['logout']

		//PROFILE SETTINGS
		div#profileSettings.settingsContent
			h3 Profile Settings
			//FIRST NAME
			div.settingsElement
				form( method="POST")
					label= tr['first_name'] + ' : '
					span= errors.first_name
					span#first_name_existed.existed= profile.first_name
					input#first_name( name="first_name" value=profile.first_name hidden)
					div#settingsFirstNameButtons(hidden)
						input#submitFirstName.btn_green( type="submit" value=tr['submit'])
						a#cancelEditFirstName.cancel_link( href="javascript:;" onclick="cancelEditField('first_name_existed', 'first_name', 'settingsFirstNameButtons', 'editFirstName')")= tr['cancel']

					a#editFirstName.editLink( href="javascript:;" onclick="editField('first_name_existed', 'first_name', 'settingsFirstNameButtons', 'editFirstName')" )= tr['edit']

			//LAST NAME
			div.settingsElement
				form( method="POST")
					label= tr['last_name'] + ' : '
					span= errors.last_name
					span#last_name_existed.existed= profile.last_name
					input#last_name( name="last_name" value=profile.last_name hidden )
					div#settingsLastNamebuttons(hidden)
						input#submitLastName.btn_green( type="submit" value=tr['submit'])
						a#cancelEditLastName.cancel_link( href="javascript:;" onclick="cancelEditField('last_name_existed', 'last_name', 'settingsLastNamebuttons', 'editLastName')")= tr['cancel']
					a#editLastName.editLink( href="javascript:;" onclick="editField('last_name_existed', 'last_name', 'settingsLastNamebuttons', 'editLastName')" )= tr['edit']

			//GENDER
			div.settingsElement
				form( method="POST")
					label Gender :
					span= errors.last_name
					span#gender_existed= profile.gender || "undefined"
					input#gender( name="gender" value=profile.gender hidden )
					div#settingsGenderbuttons(hidden)
						input#submitGender.btn_green( type="submit" value=tr['submit'])
						a#cancelEditGender.cancel_link( href="javascript:;" onclick="cancelEditField('gender_existed', 'gender', 'settingsGenderbuttons', 'editGender')")= tr['cancel']
					a#editGender.editLink( href="javascript:;" onclick="editField('gender_existed', 'gender', 'settingsGenderbuttons', 'editGender')" )= tr['edit']

			//AGE
			div.settingsElement
				form( method="POST")
					label Age :
					span= errors.age
					span#birthday_existed= profile.birthday.year+'/'+profile.birthday.month+'/'+profile.birthday.day
					div#birthday( hidden )
						select#birthday_year( name="birthday_year" onChange="setLeap(this.value)" )
							- for (var i = 2010; i > 1900; i--) {
								option(value=i )= i
							- }
						select#birthday_month( name="birthday_month" onChange="setSmall(this.value)" )
							- for (var i = 1; i < 13; i++) {
								option(value=i )= i
							- }
						select#birthday_day( name="birthday_day" )
							- for (var i = 1; i < 29; i++) {
								option(value=i )= i
							- }
								option#m29( value="29" ) 29
								option#m30( value="30" ) 30
								option#m31( value="31" ) 31
					div#settingsAgebuttons(hidden)
						input#submitAge.btn_green( type="submit" value=tr['submit'])
						a#cancelEditAge.cancel_link( href="javascript:;" onclick="cancelEditField('birthday_existed', 'birthday', 'settingsAgebuttons', 'editAge')")= tr['cancel']
					a#editAge.editLink( href="javascript:;" onclick="editField('birthday_existed', 'birthday', 'settingsAgebuttons', 'editAge')" )= tr['edit']

			//MAIN DISCIPLINE
			div.settingsElement
				form( method="POST")
					label Main Discipline :
					span= errors.last_name
					span#main_discipline_existed= profile.discipline || "undefined"
					select#main_discipline_input(name="discipline" onchange="show_specific_form(this);" hidden)
								option(value="no-selection" selected)= tr['choose_your_discipline']
								option(value="100m")= tr['100m']
								option(value="200m")= tr['200m']
								option(value="400m")= tr['400m']
								option(value="800m")= tr['800m']
								option(value="1500m")= tr['1500m']
								option(value="3000m")= tr['3000m']
								option(value="60m_hurdles")= tr['60m_hurdles']
								option(value="100m_hurdles")= tr['100m_hurdles']
								option(value="110m_hurdles")= tr['110m_hurdles']
								option(value="400m_hurdles")= tr['400m_hurdles']
								option(value="3000m_steeple")= tr['3000m_steeple']
								option(value="4x100m_relay")= tr['4x100m_relay']
								option(value="4x400m_relay")= tr['4x400m_relay']
								option(value="marathon")= tr['marathon']
								option(value="high_jump")= tr['high_jump']
								option(value="long_jump")= tr['long_jump']
								option(value="triple_jump")= tr['triple_jump']
								option(value="pole_vault")= tr['pole_vault']
								option(value="shot_put")= tr['shot_put']
								option(value="discus")= tr['discus']
								option(value="hammer")= tr['hammer']
								option(value="javelin")= tr['javelin']
								option(value="pentathlon")= tr['pentathlon']
								option(value="heptathlon")= tr['heptathlon']
								option(value="decathlon")= tr['decathlon']
					div#settingsMainDisciplineButtons(hidden)
						input#submitMainDiscipline.btn_green( type="submit" value=tr['submit'])
						a#cancelEditMainDiscipline.cancel_link( href="javascript:;" onclick="cancelEditField('main_discipline_existed', 'main_discipline_input', 'settingsMainDisciplineButtons', 'editMainDiscipline')")= tr['cancel']
					a#editMainDiscipline.editLink( href="javascript:;" onclick="editField('main_discipline_existed', 'main_discipline_input', 'settingsMainDisciplineButtons', 'editMainDiscipline')" )= tr['edit']

			//COUNTRY
			div.settingsElement
				form( method="POST")
					label Country :
					span= errors.country
					span#country_existed= profile.country || "undefined"
					select#country_input(name="country" hidden)
								option(value="no-selection" selected) Choose your country
								option(value="el") Greece
								option(value="en") UK
								option(value="us") USA
								option(value="ru") Russia
					div#settingsCountryButtons(hidden)
						input#submitCountry.btn_green( type="submit" value=tr['submit'])
						a#cancelEditCountry.cancel_link( href="javascript:;" onclick="cancelEditField('country_existed', 'country_input', 'settingsCountryButtons', 'editCountry')")= tr['cancel']
					a#editCountry.editLink( href="javascript:;" onclick="editField('country_existed', 'country_input', 'settingsCountryButtons', 'editCountry')" )= tr['edit']

			//ABOUT ME
			div.settingsElement
				form( method="POST")
					label About me :
					span= errors.about
					span#about_existed= profile.about || "undefined"
					textarea#about_me.textarea( name="last_name" maxlength="1000" hidden)= profile.about
					div#settingsAboutMeButtons(hidden)
						input#submitAboutMe.btn_green( type="submit" value=tr['submit'])
						a#cancelEditAboutMe.cancel_link( href="javascript:;" onclick="cancelEditField('about_existed', 'about_me', 'settingsAboutMeButtons', 'editAboutMe')")= tr['cancel']
					a#editAboutMe.editLink( href="javascript:;" onclick="editField('about_existed', 'about_me', 'settingsAboutMeButtons', 'editAboutMe')" )= tr['edit']


		//ACCOUNT SETTINGS
		div#accountSettings.settingsContent( style="display:none;" )
			h3 Account Settings

			div.settingsElement
				label Change Password
				a#editPassword.editLink( href="javascript:;" onclick="editHiddenField('changePassword', 'editPassword')" )= tr['edit']
				div#changePassword.editable( hidden )
					form#changePasswordForm( method="POST")
						span.row
							label( for="old_password" ) Old Password:
							span= errors.first_name
							input#old_password

						span.row
							label( for="new_password" ) New Password:
							span= errors.first_name
							input#new_password

						span.row
							label( for="repeat_new_password" ) Repeat New Password:
							span= errors.first_name
							input#repeat_new_password

						div#settingsAboutMeButtons
							input#submitNewPassword.btn_green( type="submit" value=tr['submit'])
							a#cancelNewPassword.cancel_link( href="javascript:;" onclick="cancelEditHiddenField('changePassword', 'editPassword')")= tr['cancel']


