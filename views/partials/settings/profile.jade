//MAIN DISCIPLINE
div#mainDisciplineDiv.settingsElement
	form( method="POST" ng-submit="submitChangeSetting('discipline')")
		label= tr['main_discipline'] + ': '
		span {{ user.discipline_formatted }}
		div(ng-show="discipline_msg !=''") {{discipline_msg}}
		div(ng-show="edit_discipline")
			select#main_discipline_input( ng-model="user.discipline" name="discipline" )
