//GENDER
div#genderDiv.settingsElement
	form( method="POST" ng-submit="submitChangeSetting('gender')")
		label= tr['gender'] + ': '
		span {{ user.gender_formatted }}
		div(ng-show="gender_msg !=''") {{gender_msg}}
		div#gender( ng-show="edit_gender" )
			input(id="male" name="gender" type="radio" ng-model="user.gender" value="male")
