h3= tr['profile_settings']

//PROFILE PIC
div#profilePicDiv.settingsElement
	form( method="POST" enctype="multipart/form-data" ng-submit="submitChangeSetting('profile_pic')")
		label= tr['profile_picture'] + ': '
		img.settings_profile_pic_thumb( src="{{user.picture}}" )
		//span= errors.profile_pic
		div( ng-show="edit_profilepic" )
			input#upload_profile_pic( name="profile_pic" type="file" accept="image/*")
		div.formButtons( ng-show="edit_profilepic" )
			input#submit_profile_pic.btn.green( type="submit" value=tr['submit'])
			a#cancelEditProfilePicture.cancel_link( ng-click="showHide('edit_profilepic')" )= tr['cancel']

		a#editProfilePicture.editLink( ng-click="showHide('edit_profilepic')" )
			include ../svg/edit_activity_svg

//FIRST NAME
div#firstNameDiv.settingsElement
	
	form( method="POST" ng-submit="submitChangeSetting('first_name')")
		label= tr['first_name'] + ': '
		span.existed {{ user.first_name }}
		div(ng-show="first_name_msg !=''") {{first_name_msg}}
		div( ng-show="edit_firstname" )
			input#first_name( ng-model="user.new_first_name" name="first_name" value="{{user.first_name}}" )
		div.formButtons( ng-show="edit_firstname" )
			input#submitFirstName.btn.green( type="submit" value=tr['submit'])
			a#cancelEditFirstName.cancel_link( ng-click="showHide('edit_firstname')" )= tr['cancel']

		a#editFirstName.editLink( ng-click="showHide('edit_firstname')" )
			include ../svg/edit_activity_svg

